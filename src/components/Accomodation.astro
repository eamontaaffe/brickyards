---
import { Image } from "astro:assets";
import LinkButton from "./LinkButton.astro";
const { imageSrc, imageAlt, name, href, suitable } = Astro.props;
---
<div class="my-4 mx-4 basis-1/3">
    <Image src={imageSrc} alt={imageAlt}  />
    <h3 class="font-body uppercase my-4">{name}</h3>
    <p class="my-4">
        <slot />
    </p>
    <p class="my-4">
        {suitable}
    </p>
    <LinkButton href={href}>
        View more
    </LinkButton>
</div>
