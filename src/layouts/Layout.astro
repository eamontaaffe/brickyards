---
import { title } from '../config';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
const frontmatterTitle = title + ' â€” ' + frontmatter?.title;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{ frontmatter?.title ? frontmatterTitle : title }</title>

        <style>
         @font-face {
             font-family: Maria;
             src: url("/Maria.ttf") format("truetype");
         }

         @font-face {
             font-family: ABCBingo;
             src: url("/ABCBingo-Bold-Trial.otf") format("opentype");
         }
        </style>
	</head>
	<body class="bg-background">
        <Header title={title} />

        <div class="my-16">
            <slot />
        </div>

        <Footer />

        <!-- Cloudflare Web Analytics -->
        <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "68f410a7411b49a5986882daa768f555"}'></script>
        <!-- End Cloudflare Web Analytics -->
	</body>
</html>
